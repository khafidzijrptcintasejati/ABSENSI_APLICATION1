<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A9E92"
    tools:context=".UpdateGuru">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="798dp"
        android:layout_marginBottom="244dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/br" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="268dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="ABSENCE SCHOOL"
        android:textColor="#000000"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="172dp"
        android:layout_height="180dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058"
        app:srcCompat="@drawable/_0231005_083849" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:rotation="180"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bgrnd" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="477dp"
        android:layout_marginBottom="68dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/updatetanggalguru"
            android:layout_width="287dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:fontFamily="@font/cantata_one"
            android:hint="Tanggal"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="@+id/updatenipguru"
            app:layout_constraintStart_toStartOf="@+id/updatenipguru"
            app:layout_constraintTop_toBottomOf="@+id/updatenipguru" />

        <EditText
            android:id="@+id/updatenipguru"
            android:layout_width="287dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:fontFamily="@font/cantata_one"
            android:hint="Nip"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/updatenamaguru"
            app:layout_constraintStart_toStartOf="@+id/updatenamaguru"
            app:layout_constraintTop_toBottomOf="@+id/updatenamaguru" />

        <EditText
            android:id="@+id/updatenamaguru"
            android:layout_width="289dp"
            android:layout_height="50dp"
            android:layout_marginTop="72dp"
            android:ems="10"
            android:fontFamily="@font/cantata_one"
            android:hint="Nama"
            android:inputType="text"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/updateketeranganguru"
            android:layout_width="287dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="43dp"
            android:ems="10"
            android:fontFamily="@font/cantata_one"
            android:hint="Keterangan"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="@+id/updatetanggalguru"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/updatetanggalguru"
            app:layout_constraintTop_toBottomOf="@+id/updatetanggalguru" />

        <Button
            android:id="@+id/updatemasukguru"
            android:layout_width="166dp"
            android:layout_height="71dp"
            android:backgroundTint="#009688"
            android:text="masuk"
            android:textSize="10pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/updateketeranganguru"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="@+id/updateketeranganguru"
            app:layout_constraintTop_toBottomOf="@+id/updateketeranganguru"
            app:layout_constraintVertical_bias="0.355" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="isi data terlebih dahulu:"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>